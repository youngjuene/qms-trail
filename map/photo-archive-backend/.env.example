# Database Configuration
# PostgreSQL connection string with PostGIS extension
DATABASE_URL=postgresql://username:password@localhost:5432/route_similarity

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379/0
USE_REDIS=false

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=Route Similarity API

# Environment (development, staging, production)
ENVIRONMENT=development

# CORS Configuration
# Comma-separated list of allowed origins for production
# Leave empty to use wildcard (*) in development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Route Processing Parameters
# Angle threshold for detecting turns (degrees)
ANGLE_THRESHOLD=10.0
# Number of samples for curvature profile
CURVATURE_SAMPLES=50
# Weight for turn sequence similarity (0-1)
TURN_WEIGHT=0.6
# Weight for curvature profile similarity (0-1)
CURVATURE_WEIGHT=0.4

# Search Configuration
# Default number of results to return
DEFAULT_TOP_K=10
# Default minimum similarity threshold (0-1)
DEFAULT_MIN_SIMILARITY=0.6
# Maximum number of results allowed
MAX_TOP_K=100

# Performance Tuning
# Maximum number of candidate routes to evaluate
MAX_CANDIDATE_LIMIT=1000
# Database connection pool size
DATABASE_POOL_SIZE=10
# Database connection pool max overflow
DATABASE_MAX_OVERFLOW=20

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
